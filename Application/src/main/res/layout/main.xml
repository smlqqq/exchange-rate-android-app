    <TextView
        android:id="@+id/textView3"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:text="Buy"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
